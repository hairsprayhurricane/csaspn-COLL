@page
@model csaspn_COLL.Pages.CalorieCalc
@{
    ViewData["Title"] = "Калькулятор калорий";
    Layout = null;
}

<div class="container mt-4">
    <h1 class="mb-4">Калькулятор калорий</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Название блюда</label>
                    <input asp-for="FoodName" class="form-control" placeholder="Например: Уран" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Калорийность (на 100г)</label>
                    <div class="input-group">
                        <input asp-for="CalorieAmountPer100g" type="number" min="0" step="0.1" class="form-control" />
                        <span class="input-group-text">ккал</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Вес порции</label>
                    <div class="input-group">
                        <input asp-for="GrammAmount" type="number" min="1" class="form-control" />
                        <span class="input-group-text">г</span>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Добавить</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.AddedFoods.Any())
    {
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Список продуктов (колво @Model.AddedFoods.Count):</h3>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Блюдо</th>
                                <th>Кол-во</th>
                                <th>Калории</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var food in Model.AddedFoods)
                            {
                                <tr>
                                    <td>@food.Name</td>
                                    <td>@food.GrammAmount г</td>
                                    <td>@food.Calories.ToString("0.0") ккал</td>
                                    <td class="text-end">
                                        <form method="post" asp-page-handler="Remove" asp-route-id="@food.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">×</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th>Итого:</th>
                                <th>@Model.TotalGrams г</th>
                                <th colspan="2">@Model.TotalCalories.ToString("0.0") ккал</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <form method="post" asp-page-handler="Clear" class="mt-3">
                    <button type="submit" class="btn btn-outline-danger">Очистить список</button>
                </form>
            </div>
        </div>
    }
</div>
